@using LinkedDataBrowser.Models.ViewModels;

<div class="form-group">
    @Html.Label(nameof(SearchInfo.Endpoints), "Endpoints:", htmlAttributes: new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBox(nameof(SearchInfo.Endpoints), "http://dbpedia.org/sparql", new { required = true, @class = "form-control", placeholder = "Endpoint" }) 
    </div>
</div>

<div class="form-group endpoint-prototype">   
    <div class="col-md-9 col-md-offset-3">
        @Html.TextBox(nameof(SearchInfo.Endpoints), "", new { @class = "form-control", placeholder = "Endpoint" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-12">
        <button class="btn btn-default btn-sm pull-right add-endpoint">Add field</button>
        <br />
    </div>
</div>

<div class="form-group hidden">
    @Html.Label(nameof(SearchInfo.DefaultGraph), "Default graph:", htmlAttributes: new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBox(nameof(SearchInfo.DefaultGraph), "", new { @class = "form-control", placeholder = "Default graph" })
    </div>
</div>
