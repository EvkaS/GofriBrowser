@using LinkedDataBrowser.Models.ViewModels;

<div class="form-group">
    @Html.Label(nameof(SearchInfo.Timeout), "Execution timeout:", htmlAttributes: new { @class = "col-md-3 control-label" })
    <div class="col-md-3">
        @Html.TextBox(nameof(SearchInfo.Timeout), value: 20000, htmlAttributes: new { type = "number", min = 0, max = int.MaxValue, @class = "text-left form-control" })
    </div>
    <div class="col-md-6 form-control-static">
        <p>milliseconds <i>(values less than @Config.MIN_SEARCH_TIME are ignored)</i></p>
    </div>
</div>

<div class="form-group">
    @Html.Label(nameof(SearchInfo.ResultsOnPage), "Results on a page:", htmlAttributes: new { @class = "col-md-3 control-label" })
    <div class="col-md-3">
        @Html.DropDownList(nameof(SearchInfo.ResultsOnPage), new SelectList(new List<int> { 10, 20, 30, 50, 100 }, selectedValue: 30), htmlAttributes: new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.Label(nameof(SearchInfo.Language), "Language:", htmlAttributes: new { @class = "col-md-3 control-label" })
    <div class="col-md-3">
        @Html.DropDownList(nameof(SearchInfo.Language), new SelectList(new List<string> { "en", "es", "cz", "fr" }, selectedValue: "en"), htmlAttributes: new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.TextBox(nameof(SearchInfo.PageNumber), value: 1, htmlAttributes: new { type = "hidden" })
</div>

<div class="form-group">
    @Html.TextBox(nameof(SearchInfo.MaxObjects), value: Config.RESULT_OBJECTS_NUMBER, htmlAttributes: new { type = "hidden" })
</div>